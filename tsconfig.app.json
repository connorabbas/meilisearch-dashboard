{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.vue",
        "components.d.ts"
    ],
    "exclude": [
        "src/**/__tests__/*",
        "node_modules",
        "dist"
    ],
    "compilerOptions": {
        "verbatimModuleSyntax": false,
        "allowImportingTsExtensions": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
    }
}